<%include ../layout.ejs%>

<block name="content">
    <div class="container">
        <div class="row" style="height: 1000px;">
            <form class="form-horizontal" method="post" action="/admin/movie" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="col-sm-2 control-label">豆瓣同步</label>
                    <div class="col-sm-10">
                        <input id="douban" class="form-control" type="text"/>
                    </div>
                    <% if(movie._id) { %>
                    <input type="hidden" name="_id" value="movie._id"/>
                    <% } %>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="inputCategory">电影分类</label>
                    <div class="col-sm-10">
                        <input id="inputCategory" class="form-control" type="text" name="categoryName" value="movie.categoryName"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">分类选择</label>
                    <% for (var i = 0; i < categories.length; i++) {
                      var cat = categories[i];
                    %>
                    <label class="radio-inline">
                        <% if(movie._id){
                        %>
                        <input type="radio" name="category" value="<%= cat._id.toString()%>" checked="<%= cat._id.toString()==movie.category.toString()%>" value="<%= cat.name%>"/>
                        <% } else { %>
                        <input type="radio" name="category" value="<%= cat._id%>" value="<%= cat.name%>"/>
                        <% } %>
                    </label>
                    <% } %>
                </div>
                <div  class="form-group">
                    <label class="col-sm-2 form-control" for="inputTitle">电影名字</label>
                    <div class="col-sm-10">
                        <input id="inputTitle" class="form-control" type="text" name="title" value="<%= movie.title%>"/>
                    </div>
                </div>
                <div  class="form-group">
                    <label class="col-sm-2 form-control" for="inputDoctor">电影导演</label>
                    <div class="col-sm-10">
                        <input id="inputDoctor" class="form-control" type="text" name="doctor" value="<%= movie.doctor%>"/>
                    </div>
                </div>
                <div  class="form-group">
                    <label class="col-sm-2 form-control" for="inputCountry">国家</label>
                    <div class="col-sm-10">
                        <input id="inputCountry" class="form-control" type="text" name="country" value="<%= movie.country%>>"/>
                    </div>
                </div>
                <div  class="form-group">
                    <label class="col-sm-2 form-control" for="inputLanguage">语言</label>
                    <div class="col-sm-10">
                        <input id="inputLanguage" class="form-control" type="text" name="language" value="<%= movie.language%>"/>
                    </div>
                </div>
                <div  class="form-group">
                    <label class="col-sm-2 form-control" for="inputPoster">海报地址</label>
                    <div class="col-sm-10">
                        <input id="inputPoster" class="form-control" type="text" name="poster" value="<%= movie.poster%>"/>
                    </div>
                </div>
                <div  class="form-group">
                    <label class="col-sm-2 form-control" for="uploadPoster">海报上传</label>
                    <div class="col-sm-10">
                        <input id="uploadPoster" class="form-control" type="file" name="uploadPoster"/>
                    </div>
                </div>
                <div  class="form-group">
                    <label class="col-sm-2 form-control" for="inputSummary">电影简介</label>
                    <div class="col-sm-10">
                        <input id="inputSummary" class="form-control" type="text" name="summary" value="<%= movie.summary%>"/>
                    </div>
                </div>
                <div  class="form-group">
                    <label class="col-sm-2 form-control" for="inputFlash">flash</label>
                    <div class="col-sm-10">
                        <input id="inputFlash" class="form-control" type="text" name="flash" value="<%= movie.flash%>"/>
                    </div>
                </div>
                <div  class="form-group">
                    <label class="col-sm-2 form-control" for="inputYear">电影年份</label>
                    <div class="col-sm-10">
                        <input id="inputYear" class="form-control" type="text" name="year" value="<%= movie.year%>"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-default" type="submit">录入</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script type="text/javascript" src="/methodjs/js/admin.js"></script>
</block>