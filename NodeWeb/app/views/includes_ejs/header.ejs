<div class="container">
    <div class="row">
        <div class="page-header clearfix">
            <h1 title="中毒科幻迷"/>
            <div class="col-sm-4">
                <small>
                    中毒科幻迷
                </small>
            </div>
            <div class="col-sm-8">
                <form method="GET" action="/results">
                    <div class="input-group col-sm-4 pull-right">
                        <input class="form-control" type="text" name="q"/>
                        <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">搜索</button>
                </span>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="navbar navbar-default navbar-fixed-bottom">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="/">中毒科幻迷</a>

            <% if(user) { %>
            <p class="navbar-text navbar-right">
                <span>welcome, #{user.name}</span>
                <span> &nbsp; |&nbsp;</span>
                <a class="navbar-link" href="/logout">退出登录</a>
            </p>
            <% } else { %>
            <p class="navbar-text navbar-right">
                <a class="navbar-link" href="#" data-toggle="modal" data-target="#signupModal">注册</a>
                <span> &nbsp; |&nbsp;</span>
                <a class="navbar-link" href="#" data-toggle="modal" data-target="#signinModal">登录</a>
            </p>
            <% } %>
        </div>
    </div>
</div>

<div id="signupModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="POST" action="/user/signup">
                <div class="modal-header">注册</div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="signupName">用户名</label>
                        <input id="signupName" class="form-control" name="name" type="text"/>
                    </div>
                    <div class="form-group">
                        <label for="signupPassword">密码</label>
                        <input id="signupPassword" class="form-control" name="name" type="text"/>
                    </div>
                    <div class="form-group">
                        <label for="signupSex">性别</label>
                        <input id="signupSex" class="form-control" name="sex" type="text">
                    </div>
                    <div class="form-group">
                        <label for="signupTel">联系方式</label>
                        <input id="signupTel" class="form-control" name="tel" type="text"/>
                    </div>
                    <div class="form-group">
                        <label for="signupEmail">邮箱</label>
                        <input id="signupEmail" class="form-control" name="email" type="text"/>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default" type="button" data-dismiss="modal">关闭</button>
                    <button class="btn btn-success" type="submit">提交</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="signinModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="POST" action="/user/signin">
                <div class="modal-header">登录</div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="signinName">用户名</label>
                        <input id="signinName" class="form-control" name="name" type="text"/>
                    </div>
                    <div class="form-group">
                        <label for="signinPassword">密码</label>
                        <input id="signinPassword" class="form-control" name="password" type="text"/>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default" type="password" type="text">关闭</button>
                    <button class="btn btn-success" type="submit">提交</button>
                </div>
            </form>
        </div>
    </div>
</div>