.container
  .row
    .page-header
      h1= title
        small 重度科幻迷
.navbar.navbar-default.navbar-fixed-bottom
  .container
    .navbar-header
      a.navbar-brand(href="/") 中毒科幻迷
    if user
      p.navbar-text.navbar-right
        span welcome,#{user.name}
        span &nbsp; |&nbsp;
        a.navbar-link(href="/logout") 退出登录
    else
      p.navbar-text.navbar-right
        a.navbar-link(href="#", data-toggle="modal", data-target="#signupModal") 注册
        span &nbsp; |&nbsp;
        a.navbar-link(href="#", data-toggle="modal", data-target="#signinModal") 登录
#signupModal.modal.fade
  .modal-dialog
    .modal-content
      form(method="POST", action="/user/signup")
        .modal-header 注册
        .modal-body
          .form-group
            label(for="signupName") 用户名
            input#signupName.form-control(name="name", type="text")
          .form-group
            label(for="signupPassword") 密码
            input#signupPassword.form-control(name="password", type="text")
          .form-group
            label(for="signupSex") 性别
            input#signupSex.form-control(name="sex", type="text")
          .form-group
            label(for="signupTel") 联系方式
            input#signupTel.form-control(name="tel", type="text")
          .form-group
            label(for="signupEmail") 邮箱
            input#signupEmail.form-control(name="email", type="text")
        .modal-footer
          button.btn.btn-default(type="button", data-dismiss="modal") 关闭
          button.btn.btn-success(type="submit") 提交
#signinModal.modal.fade
  .modal-dialog
    .modal-content
      form(method="POST", action="/user/signin")
        .modal-header 登录
        .modal-body
          .form-group
            label(for="signinName") 用户名
            input#signinName.form-control(name="name", type="text")
          .form-group
            label(for="signinPassword") 密码
            input#signinPassword.form-control(name="password", type="text")
        .modal-footer
          button.btn.btn-default(type="button", data-dismiss="modal") 关闭
          button.btn.btn-success(type="submit") 提交